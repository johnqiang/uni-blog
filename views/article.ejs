	<span><a class="edit" href="/edit/<%=post.name%>/<%=post.time.day%>/<%=post.title%>">edit</a></span>
	<span><a class="edit" href="/delete/<%=post.name%>/<%=post.time.day%>/<%=post.title%>">delete</a></span>
	<% } %>
