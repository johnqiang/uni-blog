<%- include header%>
<% posts.forEach(function(post) {%>
	<p><h2><a href="/article/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2><a href="/user/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a></p>
	<p class="info">
		作者：<a href="#"><%= post.name %></a> | 
		日期：<%= post.time.minute %>
		标签：
	      <% post.tags.forEach(function (tag, index) { %>
	        <% if (tag) { %>
	          <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
	        <% } %>
	      <% }) %>
	</p>
  	<p><%- post.post %></p>
  	<p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
<%})%>
<%- include paging %>
<%- include footer%>